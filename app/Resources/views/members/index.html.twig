{% extends 'base.html.twig' %}

{% block body %}
    <h1>Members list</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Team(s)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td><a href="{{ path('members_show', { 'id': member.id }) }}">{{ member.id }}</a></td>
                <td>{{ member.name }}</td>
                {% for team in teams %}
                    <td><a href="{{ path('teams_show', { 'id' : team.id})}}"> {{ team.teamname }}</td></a>
                {% endfor %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('members_show', { 'id': member.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('members_edit', { 'id': member.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('members_new') }}">Create a new member</a>
        </li>
    </ul>
{% endblock %}
