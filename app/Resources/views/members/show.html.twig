{% extends 'base.html.twig' %}

{% block body %}
    <h1>Member</h1>

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ member.id }}</td>
            </tr>
           {% if (member.name) is not empty %} <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            {% endif %}
            {% if member.lastname is not empty %}
            <tr>
                <th>Lastname</th>
                <td>{{ member.lastname }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Registered as</th>
                <td>{{ member.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
        <tr>
            <th>User's tasks</th>
            {% for task in tasks %}
            <td>{{ task.taskname }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('homepage') }}">Back to the homepage</a>
        </li>

    </ul>
{% endblock %}
