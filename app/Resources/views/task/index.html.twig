{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tasks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Taskname</th>
                <th>Taskcomment</th>
                <th>Priority</th>
                <th>Taskcreated</th>
                <th>Taskdueto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('task_show', { 'id': task.id }) }}">{{ task.id }}</a></td>
                <td>{{ task.taskname }}</td>
                <td>{{ task.taskcomment }}</td>
                <td>{{ task.priority }}</td>
                <td>{% if task.taskcreated %}{{ task.taskcreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if task.taskdueto %}{{ task.taskdueto|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('task_show', { 'id': task.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('task_edit', { 'id': task.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_new') }}">Create a new task</a>
        </li>
    </ul>
{% endblock %}
