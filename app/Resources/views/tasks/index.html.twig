{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tasks list</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Task name</th>
                <th>Comment about task</th>
                <th>Author</th>
                <th>Priority</th>
                <th>Created</th>
                <th>Due to</th>
                <th>Status</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('tasks_show', { 'id': task.id }) }}">{{ task.id }}</a></td>
                <td>{{ task.taskname }}</td>
                <td>{{ task.taskcomment }}</td>
                <td>{{ task.author }}</td>
                <td>{{ task.priority }}</td>
                <td>{% if task.created %}{{ task.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if task.dueto %}{{ task.dueto|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ task.status }}</td>
                <td>{{ task.category }}</td>
                <td>

                    <form action="{{ path('tasks_show', { 'id': task.id }) }}">
                        <input type="submit" value="Show" />
                    </form>
                            <form action="{{ path('tasks_edit', { 'id': task.id }) }}">
                                <input type="submit" value="Edit" />
                            </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <form action="{{ path('tasks_new') }}">
                <input type="submit" value="Create a new task" />
            </form>

{% endblock %}
